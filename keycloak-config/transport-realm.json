{
  "realm": "transport-realm",
  "enabled": true,
  "registrationAllowed": true,
  "registrationEmailAsUsername": true,
  "loginWithEmailAllowed": true,
  "duplicateEmailsAllowed": false,
  "resetPasswordAllowed": true,
  "editUsernameAllowed": false,
  "sslRequired": "none",
  "roles": {
    "realm": [
      {
        "name": "admin",
        "description": "Administrator - Full system access"
      },
      {
        "name": "gerant",
        "description": "Manager - Manages transporteurs in a zone"
      },
      {
        "name": "transporteur",
        "description": "Driver/Transporter - Handles deliveries"
      }
    ]
  },
  "clients": [
    {
      "clientId": "transport-app",
      "name": "Transport Management Application",
      "enabled": true,
      "publicClient": true,
      "standardFlowEnabled": true,
      "directAccessGrantsEnabled": true,
      "redirectUris": [
        "http://localhost:4200/*"
      ],
      "webOrigins": [
        "http://localhost:4200"
      ],
      "defaultClientScopes": [
        "web-origins",
        "acr",
        "profile",
        "roles",
        "email"
      ],
      "attributes": {
        "post.logout.redirect.uris": "http://localhost:4200/*"
      },
      "protocolMappers": [
        {
          "name": "audience-mapper",
          "protocol": "openid-connect",
          "protocolMapper": "oidc-audience-mapper",
          "config": {
            "included.client.audience": "transport-app",
            "id.token.claim": "true",
            "access.token.claim": "true"
          }
        }
      ]
    }
  ],
  "users": [
    {
      "username": "admin@transport.com",
      "email": "admin@transport.com",
      "firstName": "System",
      "lastName": "Admin",
      "enabled": true,
      "emailVerified": true,
      "credentials": [
        {
          "type": "password",
          "value": "admin123",
          "temporary": false
        }
      ],
      "realmRoles": ["admin"]
    },
    {
      "username": "gerant@transport.com",
      "email": "gerant@transport.com",
      "firstName": "Marie",
      "lastName": "Dupont",
      "enabled": true,
      "emailVerified": true,
      "credentials": [
        {
          "type": "password",
          "value": "gerant123",
          "temporary": false
        }
      ],
      "realmRoles": ["gerant"]
    },
    {
      "username": "transporteur@transport.com",
      "email": "transporteur@transport.com",
      "firstName": "Jean",
      "lastName": "Martin",
      "enabled": true,
      "emailVerified": true,
      "credentials": [
        {
          "type": "password",
          "value": "transporteur123",
          "temporary": false
        }
      ],
      "realmRoles": ["transporteur"]
    }
  ]
}
